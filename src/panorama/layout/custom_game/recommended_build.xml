<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/game_setup.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/recommended_build.js" />
    </scripts>
    <Panel class="recommendedBuild">
        <Panel class="recommendedBuildHolder">
            <Panel class="recommendedHeroImageCon">
                <DOTAHeroImage id="recommendedHeroImage" onactivate="onPlayerHeroClicked()" />
                <Image id="recommendedAttribute" src="file://{images}/primary_attribute_icons/primary_attribute_icon_strength.psd" />
            </Panel>
            <Panel id="recommendedSkillContainer">
                <DOTAAbilityImage id="recommendedSkill1" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(1)" />
                <DOTAAbilityImage id="recommendedSkill2" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(2)" />
                <DOTAAbilityImage id="recommendedSkill3" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(3)" />
                <DOTAAbilityImage id="recommendedSkill4" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(4)" />
                <DOTAAbilityImage id="recommendedSkill5" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(5)" />
                <DOTAAbilityImage id="recommendedSkill6" abilityname="life_stealer_empty_1" onactivate="onPlayerAbilityClicked(6)" />
            </Panel>
        </Panel>
        <Panel>
            <Label id="buildName" text="Build Name" />
        </Panel>
    </Panel>
</root>

<root>
    <styles>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
        <include src="s2r://panorama/styles/play.vcss_c" />
        <include src="file://{resources}/styles/custom_game/game_setup.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/game_setup.js" />
    </scripts>
    <Panel class="lodOptionsInterface">
        <Panel id="mainSelectionRoot">
            <Panel id="mainTeamContainer">
                <Panel id="theRadiant" class="theTeamTopLevel" onactivate="onJoinRadiantPressed()">
                    <Label class="radiantGlow" text="theRadiant" />
                    <Panel id="theRadiantContainer" class="theTeamContainer" />
                </Panel>
                <Panel id="theDire" class="theTeamTopLevel" onactivate="onJoinDirePressed()">
                    <Label class="direGlow" text="theDire" />
                    <Panel id="theDireContainer" class="theTeamContainer" />
                </Panel>

                <Panel id="middleButtons">
                    <Button onactivate="onAutoAssignPressed()">
                        <Label text="autoAssignTeams" />
                    </Button>
                    <Button onactivate="onShufflePressed()">
                        <Label text="shuffleTeams" />
                    </Button>
                    <Button id="lodLockButton" onactivate="onLockPressed()">
                        <Label text="lockTeams" />
                    </Button>
                    <Button id="lodUnlockButton" onactivate="onUnlockPressed()">
                        <Label text="unlockTeams" />
                    </Button>
                </Panel>
            </Panel>

            <Panel id="unassignedTeamContainer" onactivate="onJoinUnassignedPressed()">
                <Panel id="unassignedPlayersContainer" class="theTeamContainer" />
                <Label id="unassignedTeamLabel" text="theUnassigned" />
            </Panel>

            <Panel id="heroTeamContainer">
                <Panel id="theRadiantHeroes" class="theTeamTopLevel">
                    <Label class="radiantGlow" text="theRadiant" />
                    <Panel id="theRadiantContainerHeroes" class="theTeamContainer" />
                </Panel>
                <Panel id="theDireHeroes" class="theTeamTopLevel">
                    <Label class="direGlow" text="theDire" />
                    <Panel id="theDireContainerHeroes" class="theTeamContainer" />
                </Panel>
            </Panel>

            <Panel id="stageSelection">
                <Button id="stageButtonOptionSelection" onactivate="SetSelectedPhase(PHASE_OPTION_SELECTION)">
                    <Label text="lodStageButtonOptionSelection" />
                </Button>
                <Label class="lodStageArrow" text="->" />
                <Button id="stageButtonBanning" onactivate="SetSelectedPhase(PHASE_BANNING)">
                    <Label text="lodStageButtonBanning" />
                    <Label text="" id="lodBanningTimeRemaining" />
                </Button>
                <Label class="lodStageArrow" text="->" />
                <Button id="stageButtonSelection" onactivate="SetSelectedPhase(PHASE_SELECTION)">
                    <Label text="lodStageButtonSelection" />
                    <Label text="" id="lodSelectionTimeRemaining" />
                </Button>
                <Label class="lodStageArrow" text="->" />
                <Button id="stageButtonReview" onactivate="SetSelectedPhase(PHASE_REVIEW)">
                    <Label text="lodStageButtonReview" />
                    <Label text="" id="lodReviewTimeRemaining" />
                </Button>
            </Panel>

            <Panel id="optionSelection">
                <Panel id="optionCategories" />
                <Panel id="optionList">
                    <Label style="color: #FFFFFF; font-size: 24px;" text="Option Selection Coming Soon!" />
                </Panel>
                <Panel id="optionButtons">
                    <Label id="lockTeamsFirst" text="lockTeamsFirst" />
                    <Button id="lockOptionsButton" class="PlayButton" onactivate="onLockOptionsPressed()">
                        <Label text="lockOptions" />
                    </Button>
                </Panel>
            </Panel>

            <Panel id="banningPhase">
                <Label text="boobies"/>
            </Panel>

            <Panel id="pickingPhase">
                <Panel id="pickingPhaseLeftSide">
                    <Panel id="pickingPhaseTabs">
                        <Panel id="pickingPhaseMainTab" class="pickingPhaseTab">
                            <Label text="Find a hero" link="pickingPhaseHeroTab"/>
                            <Label text="Find a skill" link="pickingPhaseSkillTab"/>
                            <Label text="Recommended Builds" link="pickingPhaseRecommendedBuildsTab"/>
                        </Panel>
                        <Panel id="pickingPhaseHeroTab" class="pickingPhaseTab">
                            <Label text="Back" link="pickingPhaseMainTab"/>

                            <Panel id="buildingHelperHeroPreview">
                                <Panel id="buildingHelperHeroPreviewHeroContainer">
                                    <DOTAHeroImage id="buildingHelperHeroPreviewHero" heroname="npc_dota_hero_nevermore" />
                                </Panel>
                                <Label id="buildingHelperHeroPreviewHeroSelect" text="Select" />
                                <Panel id="buildingHelperHeroPreviewSkillsContainer">
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill1" abilityname="nevermore_dark_lord" class="lodSelected"/>
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill2" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill3" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill4" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill5" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill6" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill7" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill8" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill9" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill10" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill11" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill12" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill13" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill14" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill15" abilityname="nevermore_dark_lord" />
                                    <DOTAAbilityImage id="buildingHelperHeroPreviewSkill16" abilityname="nevermore_dark_lord" />
                                </Panel>
                            </Panel>
                        </Panel>
                        <Panel id="pickingPhaseSkillTab" class="pickingPhaseTab">
                            <Label text="Back" link="pickingPhaseMainTab"/>
                        </Panel>
                        <Panel id="pickingPhaseRecommendedBuildsTab" class="pickingPhaseTab">
                            <Label text="Back" link="pickingPhaseMainTab"/>
                        </Panel>
                    </Panel>

                    <Panel id="pickingPhaseBuild">
                        <Panel id="pickingPhaseSelectedHero">
                            <DOTAHeroImage id="pickingPhaseSelectedHeroImage" heroname="npc_dota_hero_nevermore" heroimagestyle="landscape" />
                            <Label id="pickingPhaseSelectedHeroText" text="Nevermore" />
                        </Panel>

                        <Panel id="pickingPhaseBuildSkills">
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                            <DOTAAbilityImage abilityname="nevermore_dark_lord" />
                        </Panel>

                        <Panel id="pickingPhaseBuildButtons">
                            <Button class="PlayButton">
                                <Label text="moreTime" />
                            </Button>
                            <Button class="makeThePlayerNoticeThisButton">
                                <Label text="lockBuild" />
                            </Button>
                        </Panel>
                    </Panel>
                </Panel>

                <Panel id="pickingPhaseRightSide">
                    <Panel id="pickingPhaseTabsContent">
                        <Panel id="pickingPhaseMainTabContent" class="pickingPhaseTabContent">
                            <Label text="main content"/>
                        </Panel>

                        <Panel id="pickingPhaseHeroTabContent" class="pickingPhaseTabContent">
                            <Panel class="pickingHeroList">
                                <Label text="Strength" class="pickingHeroListCategory"/>
                                <Panel id="strHeroContainer" class="pickingHeroListHeroes"/>
                            </Panel>

                            <Panel class="pickingHeroList">
                                <Label text="Agility" class="pickingHeroListCategory"/>
                                <Panel id="agiHeroContainer" class="pickingHeroListHeroes"/>
                            </Panel>

                            <Panel class="pickingHeroList">
                                <Label text="Intelligence" class="pickingHeroListCategory"/>
                                <Panel id="intHeroContainer" class="pickingHeroListHeroes"/>
                            </Panel>
                        </Panel>

                        <Panel id="pickingPhaseSkillTabContent" class="pickingPhaseTabContent">
                            <Label text="skill content"/>
                        </Panel>

                        <Panel id="pickingPhaseRecommendedBuildsTabContent" class="pickingPhaseTabContent">
                            <Label text="rec content"/>
                        </Panel>
                    </Panel>
                </Panel>
            </Panel>
        </Panel>
    </Panel>
</root>

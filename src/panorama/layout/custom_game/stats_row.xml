<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/stats_row.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/stats_row.js" />
    </scripts>
    <Panel class="statsRow">
        <Panel>
            <Label id="playerName" class="statColumn" text="Player Name" />
        </Panel>
        <Panel>
            <Label id="totalGames" class="statColumn statNumber" text="Total Games" />
        </Panel>
        <Panel>
            <Label id="totalWins" class="statColumn statNumber" text="Total Wins" />
        </Panel>
        <Panel>
            <Label id="totalAbandons" class="statColumn statNumber" text="Total Abandons" />
        </Panel>
        <Panel>
            <Label id="totalFails" class="statColumn statNumber" text="Total Fails" />
        </Panel>
        <Panel>
            <Label id="lastAbandon" class="statColumn" text="Last Abandon" />
        </Panel>
    </Panel>
</root>

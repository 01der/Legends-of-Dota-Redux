<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/universal_votings.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/universal_votings.js" />
	</scripts>
	<Panel class="base" hittest="false">
        <Panel class='dialog'>
            <Label class='title' text='TEAM SWITCH' id="titleLabel" />
            <Panel class='bar_border' >
                <Panel class='bar_inner' id='vote_timer' />
            </Panel>
            <Panel id='swap_info' >
                <Panel id='swapper_switch' class='player_info'>
                    <DOTAAvatarImage id="swapper_icon"/>
                    <Label id='swapper_name' />
                </Panel>
                <Label id="lineLabel" text='would like to switch with'/>
            </Panel>
            <Panel id='choice' class='choice' >
                <Panel class='isolation' >
                    <Button id="acceptButton" class='accept'>
                        <Label class="choice_label" text='Accept' />
                    </Button>
                </Panel>
                <Panel class='isolation' >
                    <Button id="declineButton" class='decline'>
                        <Label class="choice_label" text='Decline' />
                    </Button>
                </Panel>
            </Panel>
        </Panel>
	</Panel>
</root>
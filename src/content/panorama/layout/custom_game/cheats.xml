<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/play.vcss_c" />
		<include src="file://{resources}/styles/custom_game/cheats.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/cheats.js" /> 
	</scripts>
	
	<Panel class="cheatsRoot" hittest="false">
		<Panel id="cheatsContainer" hittest="false">
			<Panel id="cheatsButton">
				<Button id="showCheatsButton" onactivate="toggleCheats()">
					<Image id="cheatsIcon" src="file://{images}/custom_game/cheats.png"/>
				</Button>
			</Panel>
			<Panel id="cheatsDisplay" class="cheatsDisplayHidden" hittest="false">
				<Label class="titlelabel" text="Cheat/Debuging Menu" />
				<TextButton id="com_start_game" class="cheatButton" onactivate="onActivate('com_start_game')">
					<Label/>
				</TextButton>
				<TextButton id="com_spawn_neutrals" class="cheatButton" onactivate="onActivate('com_spawn_neutrals')">
					<Label/>
				</TextButton>
				<TextButton id="com_lvl_up_1" class="cheatButton"  onactivate="onActivate('com_lvl_up_1')">
					<Label/>
				</TextButton>
				
				<TextButton id="com_lvl_max" class="cheatButton" onactivate="onActivate('com_lvl_max')">
					<Label/>
				</TextButton>
				<TextButton id="com_gold_max" class="cheatButton" onactivate="onActivate('com_gold_max')">
					<Label/>
				</TextButton>
				
				<TextButton id="com_refresh" class="cheatButton" onactivate="onActivate('com_refresh')">
					<Label/>
				</TextButton>
				<TextButton id="com_respawn" class="cheatButton" onactivate="onActivate('com_respawn')">
					<Label/>
				</TextButton>
				<TextButton id="com_item_1" class="cheatButton cheatButtonItem" onactivate="onActivate('com_item_1')">
					<Label/>
				</TextButton>
				<TextButton id="com_item_2" class="cheatButton cheatButtonItem" onactivate="onActivate('com_item_2')">
					<Label/>
				</TextButton>
				<TextButton id="com_item_3" class="cheatButton cheatButtonItem" onactivate="onActivate('com_item_3')">
					<Label/>
				</TextButton>
				<TextButton id="com_item_4" class="cheatButton cheatButtonItem" onactivate="onActivate('com_item_4')">
					<Label/>
				</TextButton>
				<TextButton id="com_lvl_bots_1" class="cheatButton cheatButtonBotsandSpawning" onactivate="onActivate('com_lvl_bots_1')">
					<Label/>
				</TextButton>
				<TextButton id="com_gold_bots" class="cheatButton cheatButtonBotsandSpawning" onactivate="onActivate('com_gold_bots')">
					<Label/>
				</TextButton>
				<TextButton id="com_spawn_roshan" class="cheatButton cheatButtonBotsandSpawning" onactivate="onActivate('com_spawn_roshan')">
					<Label/>
				</TextButton>
				<TextButton id="com_spawn_enemy" class="cheatButton cheatButtonBotsandSpawning" onactivate="onActivate('com_spawn_enemy')">
					<Label/>
				</TextButton>
			    <TextButton id="com_spawn_friendly" class="cheatButton cheatButtonBotsandSpawning" onactivate="onActivate('com_spawn_friendly')">
					<Label/>
				</TextButton>	
				
				<TextButton id="com_wtf_unwtf" class="cheatButton cheatButtonOther" onactivate="onActivate('com_wtf_unwtf')">
					<Label/>
				</TextButton>
				<TextButton id="com_vision" class="cheatButton cheatButtonOther" onactivate="onActivate('com_vision')">
					<Label/>
				</TextButton>
			</Panel>
		</Panel>
	</Panel>
</root>